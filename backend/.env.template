# Copy this file to .env and fill in your actual values

# Database Configuration
PORT=5000
MONGODB_URI=mongodb://localhost:27017/habitheat
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters
DB_NAME=habitheat

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_secret_key

# Google OAuth Configuration
# Get these from Google Cloud Console (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id-here.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Frontend URL for redirects
FRONTEND_URL=http://localhost:5173

# Session Secret for Passport (should be a random string)
SESSION_SECRET=your-random-session-secret-at-least-32-characters

# Environment
NODE_ENV=development
